<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/productcat_sdk_container_margin_horizontal"
    android:paddingRight="@dimen/productcat_sdk_container_margin_horizontal"
    android:paddingTop="@dimen/productcat_sdk_container_margin_vertical"
    android:paddingBottom="@dimen/productcat_sdk_container_margin_vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/productcat_sdk_policy_title"
        android:textSize="@dimen/productcat_sdk_text_title_size"
        android:textColor="@color/productcat_sdk_textBlack"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/privacy_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/productcat_sdk_item_margin_vertical"
        android:textSize="@dimen/productcat_sdk_text_content_size"
        android:text="@string/productcat_sdk_policy"
        android:lineHeight="@dimen/productcat_sdk_line_height"
        android:clickable="true"
        android:textColorLink="@color/productcat_sdk_lightBlue"
        android:textColor="@color/productcat_sdk_textBlack"/>

    <CheckBox
        android:id="@+id/recommend_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="top"
        android:textSize="@dimen/productcat_sdk_text_content_size"
        android:lineHeight="@dimen/productcat_sdk_line_height"
        android:buttonTint="#fb8b75"
        android:text="@string/productcat_sdk_recommend">

    </CheckBox>

    <TextView
        android:id="@+id/btn_agree"
        android:layout_width="match_parent"
        android:layout_height="@dimen/productcat_sdk_button_height"
        android:background="@drawable/productcat_sdk_round_corner_button"
        android:layout_marginTop="@dimen/productcat_sdk_button_margin_top"
        android:layout_marginBottom="@dimen/productcat_sdk_item_margin_vertical"
        android:text="@string/productcat_sdk_accept"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:gravity="center"
        android:textSize="@dimen/productcat_sdk_text_content_size"
        android:textColor="@android:color/white"/>


    <TextView
        android:id="@+id/btn_decline"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/productcat_sdk_button_height"
        android:text="@string/productcat_sdk_decline"
        android:textSize="@dimen/productcat_sdk_text_content_size"
        android:textColor= "@color/productcat_sdk_blue"/>
</LinearLayout>