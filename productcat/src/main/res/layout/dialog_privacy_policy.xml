<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/container_margin_horizontal"
    android:paddingRight="@dimen/container_margin_horizontal"
    android:paddingTop="@dimen/container_margin_vertical"
    android:paddingBottom="@dimen/container_margin_vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/policy_title"
        android:layout_marginBottom="@dimen/item_margin_vertical"
        android:textSize="@dimen/text_title_size"
        android:textColor="@color/textBlack"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/policy_content"
        android:layout_marginBottom="@dimen/item_margin_vertical"
        android:textSize="@dimen/text_content_size"
        android:lineHeight="@dimen/line_height"
        android:textColor="@color/textBlack"/>


    <TextView
        android:id="@+id/privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_policy"
        android:layout_marginBottom="@dimen/link_margin_vertical"
        android:textSize="@dimen/text_content_size"
        android:lineHeight="@dimen/line_height"
        android:textColor="@color/lightBlue"/>

    <TextView
        android:id="@+id/terms_of_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terms_of_use"
        android:textSize="@dimen/text_content_size"
        android:lineHeight="@dimen/line_height"
        android:textColor="@color/lightBlue"/>

    <TextView
        android:id="@+id/btn_agree"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/round_corner_button"
        android:layout_marginTop="@dimen/button_margin_top"
        android:layout_marginBottom="@dimen/item_margin_vertical"
        android:text="@string/accept"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:gravity="center"
        android:textSize="@dimen/text_content_size"
        android:textColor="@android:color/white"/>


    <TextView
        android:id="@+id/btn_decline"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/decline"
        android:textSize="@dimen/text_content_size"
        android:textColor= "@color/blue"/>
</LinearLayout>